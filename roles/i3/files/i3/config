# Grey colors

set $grey0 #262626
set $grey1 #313131
set $grey2 #3C3C3C
set $grey3 #474747
set $grey4 #515151
set $grey5 #5C5C5C
set $grey6 #676767
set $grey7 #727272
set $grey8 #7D7D7D
set $grey9 #888888
set $grey10 #939393
set $grey11 #9D9D9D
set $grey12 #A8A8A8
set $grey13 #B3B3B3

# Window colors
# class                 border  backgr. text    indicator
client.focused          $grey1  $grey1  $grey13 $grey13
client.focused_inactive $grey0  $grey0  $grey4  $grey4
client.unfocused        $grey0  $grey0  $grey4  $grey4
client.urgent           $grey0  $grey0  $grey4  $grey4

# Status bar colors
bar {
  status_command i3blocks
  position top
  strip_workspace_numbers yes
  colors {
    background $grey0
    statusline $grey10

    # class             border  backgr. text
    focused_workspace   $grey3  $grey3  $grey13
    active_workspace    $grey1  $grey1  $grey5
    inactive_workspace  $grey1  $grey1  $grey5
    urgent_workspace    $grey1  $grey1  $color1
  }
}

exec_always --no-startup-id hotplug.sh
exec_always --no-startup-id compton --config ~/dotfiles/.compton.conf
exec --no-startup-id redshift-gtk -l 59.17:18.3
