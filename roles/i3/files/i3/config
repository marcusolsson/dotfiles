set $color11 #F0C674
# blue
set $color4 #5F819D
set $color12 #81A2BE
# magenta
set $color5 #85678F
set $color13 #B294BB
# cyan
set $color6 #5E8D87
set $color14 #8ABEB7
# white
set $color7 #707880
